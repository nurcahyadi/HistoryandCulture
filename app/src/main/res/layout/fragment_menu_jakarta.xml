        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/jakarta"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/ButtonBatikJkt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/batik"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/ButtonMakananJkt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/makanan"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/ButtonSejarahJkt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/sejarah"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/ButtonTarianJkt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/tarian"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:id="@+id/ButtonBajudaerahJkt"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@mipmap/bajudaerah"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>